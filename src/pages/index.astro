---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pace Insights - Your First AI Department',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'AI Healthcheck',
        href: '/ai-healthcheck',
        icon: 'tabler:robot',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Pace Insights AI Department' }}
  >
    <Fragment slot="title">
      Say Hello to your first <span class="text-accent dark:text-white highlight">AI Department</span>
    </Fragment>

    <Fragment slot="subtitle">
      Transform your business with AI expertise on demand. Get strategic guidance, implementation support, and ongoing optimization from your dedicated AI team.
    </Fragment>
  </Hero>

  <!-- Features Widget -->
  <Features
    id="features"
    title="Why Choose Pace Insights?"
    subtitle="We combine deep AI expertise with practical business experience to help you succeed in the AI era."
    items={[
      {
        title: 'Strategic AI Guidance',
        description: 'Get expert advice on where and how to implement AI to maximize ROI and competitive advantage.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Implementation Support',
        description: 'From vendor selection to deployment, we ensure your AI initiatives are executed successfully.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Ongoing Optimization',
        description: 'Continuous monitoring and improvement of your AI systems to maintain peak performance.',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'Team Training',
        description: 'Empower your team with the knowledge and skills to work effectively with AI technologies.',
        icon: 'tabler:users',
      },
      {
        title: 'Risk Management',
        description: 'Ensure responsible AI use with proper governance, security, and ethical considerations.',
        icon: 'tabler:shield',
      },
      {
        title: 'Custom Solutions',
        description: 'Tailored AI solutions that align with your specific business needs and objectives.',
        icon: 'tabler:puzzle',
      },
    ]}
  />

  <!-- Steps Widget -->
  <Steps
    title="Get started with AI in three simple steps"
    items={[
      {
        title: 'AI Healthcheck',
        description: 'Begin with our comprehensive assessment of your AI readiness and opportunities.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Strategic Planning',
        description: 'Develop a tailored roadmap for implementing AI in your business.',
        icon: 'tabler:map',
      },
      {
        title: 'Implementation',
        description: 'Execute your AI strategy with our expert guidance and support.',
        icon: 'tabler:check',
      },
    ]}
  />

  <!-- Stats Widget -->
  <Stats
    title="Driving AI Success"
    stats={[
      { title: 'Happy Clients', amount: '25+' },
      { title: 'AI Projects', amount: '50+' },
      { title: 'ROI Generated', amount: '300%+' },
      { title: 'Team Members', amount: '10+' },
    ]}
  />

  <!-- CallToAction Widget -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Your AI Healthcheck',
        href: '/ai-healthcheck',
        icon: 'tabler:robot',
      },
    ]}
  >
    <Fragment slot="title">Ready to transform your business with AI?</Fragment>
    <Fragment slot="subtitle">
      Take the first step towards building your AI-powered future. Schedule your AI Healthcheck today.
    </Fragment>
  </CallToAction>
</Layout>
