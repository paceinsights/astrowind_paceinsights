---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';

// Define Metadata for the Coming Soon page
const metadata = {
  title: 'AI Healthcheck | Pace Insights - Coming Soon',
  description: 'The Pace Insights AI Healthcheck service is launching soon. Check back for updates!',
  robots: { // Discourage search engines from indexing this temporary page
    index: false,
    follow: false,
  },
};
---

<Layout metadata={metadata}>
  <!-- Header Widget -->
  <Fragment slot="header">
    <Header links={headerData.links} actions={headerData.actions} isSticky />
  </Fragment>

  <!-- Coming Soon Content -->
  <section class="flex items-center justify-center min-h-[calc(100vh-100px)] text-center">
    <div class="px-4 sm:px-6">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
        AI Healthcheck - Coming Soon!
      </h1>
      <p class="text-xl text-muted mb-8">
        We're putting the finishing touches on our AI Healthcheck service.
        <br />It will be available soon to help you assess your AI readiness.
      </p>
      <a href="/" class="btn btn-primary">Back to Homepage</a>
    </div>
  </section>
</Layout>
