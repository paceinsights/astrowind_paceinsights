---
/**
 * QuoteBlock.astro
 * A reusable, styled blockquote for prominent quotes with attribution.
 * Props:
 *   - quote: string (required)
 *   - attribution: string (required)
 */
const { quote, attribution } = Astro.props;
---
<section class="py-8 md:py-10">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
    <blockquote class="text-xl md:text-2xl italic font-semibold text-gray-800 dark:text-gray-100 mb-2">
      "{quote}"
    </blockquote>
    <figcaption class="text-base text-gray-600 dark:text-gray-400">
      {attribution}
    </figcaption>
  </div>
</section>
